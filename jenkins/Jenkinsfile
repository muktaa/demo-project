// Minimal Jenkins Pipeline - Skip Docker Issues
pipeline {
    agent {
        kubernetes {
            yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    jenkins: agent
spec:
  serviceAccountName: jenkins-deployer
  containers:
  - name: kubectl
    image: bitnami/kubectl:latest
    command:
    - cat
    tty: true
"""
        }
    }

    environment {
        AWS_DEFAULT_REGION = 'ap-south-1'
        EKS_CLUSTER_NAME = 'last9-demo'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/muktaa/demo-project.git'
            }
        }

        stage('Deploy to EKS') {
            steps {
                container('kubectl') {
                    script {
                        sh """
                        # Update kubeconfig
                        aws eks update-kubeconfig --region ${AWS_DEFAULT_REGION} --name ${EKS_CLUSTER_NAME}
                        
                        # Create namespace
                        kubectl apply -f k8s/namespace.yaml
                        
                        # Deploy infrastructure
                        kubectl apply -f k8s/postgres.yaml
                        kubectl apply -f k8s/zipkin.yaml
                        
                        # Deploy services
                        kubectl apply -f k8s/user-service.yaml
                        kubectl apply -f k8s/order-service.yaml
                        kubectl apply -f k8s/notification-service.yaml
                        
                        # Show status
                        kubectl get pods -n microservices-demo
                        kubectl get services -n microservices-demo
                        """
                    }
                }
            }
        }
    }

    post {
        always {
            script {
                sh 'rm -rf *'
            }
        }
        success {
            echo '✅ Deployment completed successfully!'
        }
        failure {
            echo '❌ Deployment failed!'
        }
    }
}